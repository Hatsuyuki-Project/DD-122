<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="program"
            type="net.mizucoffee.hatsuyuki_chinachu.model.ProgramItem"
            />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:backgroundCategory="@{program.category}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            tools:text="Example title"
            android:textColor="#000"
            android:id="@+id/title_tv"
            android:maxLines="1"
            android:text="@{program.title}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="64dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/image_view"
                app:imageUrl="@{program.thumbUrl}"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:id="@+id/des_tv"
                    android:text="@{program.description}"
                    android:lines="2"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:paddingEnd="16sp"
                    android:paddingStart="16dp"
                    android:id="@+id/time_tv"
                    android:text="@{program.date}"
                    android:textAlignment="textEnd"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textView"
            android:background="#CCC" />

    </LinearLayout>
</layout>